{
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/tailscale/codespace/tailscale": {},
    "ghcr.io/devcontainers/features/sshd:1": {}
  },
  "remoteUser": "root",
  "privileged": true,
  "securityOpt": ["seccomp=unconfined"],
  "runArgs": ["--device=/dev/net/tun"],
  "hostRequirements": {
    "cpus": 2,
    "memory": "8gb",
    "storage": "32gb"
  }
}
